{
  "cSpell.words": ["dotlottie", "Firestore", "imdat", "lottiefiles", "ngrx", "notiflix", "polymorpheus", "rspack"],
  "css.styleSheets": ["**/${fileBasenameNoExtension}.scss"],
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "always",
    "source.fixAll": "explicit",
    "source.removeUnused.ts": "always"
    // "source.removeUnusedImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "on",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache"
  },
  "eslint.validate": ["typescript", "html"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.angular": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.nx": true,
    "**/.tsbuildinfo": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/.angular/**": true,
    "**/.nx/**": true,
    "**/.tsbuildinfo": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/projects/**": true,
    "**/src/assets/**": true
  },
  "nxConsole.generateAiAgentRules": true,
  "search.exclude": {
    "**/.angular": true,
    "**/.nx": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/projects": true,
    "**/src/assets": true
  },
  "stylelint.validate": ["css", "scss"],
  "tailwindCSS.experimental.configFile": "apps/admin-panel/src/styles.scss",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.tsdk": "node_modules/typescript/lib"
}
