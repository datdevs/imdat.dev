{
  "cSpell.language": "en,vi",
  "cSpell.words": [
    "appspot",
    "Dosis",
    "dotlottie",
    "firebaseapp",
    "Firestore",
    "gzipper",
    "imdat",
    "imdatdev",
    "lottiefiles",
    "ngrx",
    "notiflix",
    "nrwl",
    "oklab",
    "opennextjs",
    "polymorpheus",
    "Prata",
    "RECAPTCHA",
    "Roundhand",
    "rspack",
    "VITE"
  ],
  "css.styleSheets": ["**/${fileBasenameNoExtension}.scss"],
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "always",
    "source.fixAll": "explicit",
    "source.removeUnused.ts": "always"
    // "source.removeUnusedImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "on",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.angular": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.nx": true,
    "**/.tsbuildinfo": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/.angular/**": true,
    "**/.nx/**": true,
    "**/.tsbuildinfo": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/projects/**": true
  },
  "nxConsole.generateAiAgentRules": true,
  "search.exclude": {
    "**/.angular": true,
    "**/.nx": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/projects": true,
    "firebase-data": true
  },
  "stylelint.validate": ["css", "scss", "less"],
  "tailwindCSS.experimental.configFile": {
    "apps/admin-panel/src/tailwind.css": "apps/admin-panel/src/**",
    "apps/landing-page/src/app/global.css": "apps/landing-page/src/**",
    "apps/wedding/src/styles/tailwind.css": "apps/wedding/src/**"
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.tsdk": "node_modules/typescript/lib"
}
